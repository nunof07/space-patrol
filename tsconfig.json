{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "sourceMap": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "paths": {
            "@src/*": ["src/*"],
            "@test/*": ["test/*"]
        }
    },
    "files": ["./src/index.ts"],
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["*.d.ts", "dist", "node_modules"]
}
